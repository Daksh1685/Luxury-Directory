{
  "name": "luxury-directory",
  "version": "1.0.0",
  "description": "A luxury directory website featuring premium hotels, private jets, and yachts",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/styles.css -o ./public/styles.css",
    "watch:css": "tailwindcss -i ./src/css/styles.css -o ./public/styles.css --watch",
    "build": "next build",
    "dev": "npm run watch:css",
    "postinstall": "npm run build:css"
  },
  "keywords": [
    "luxury",
    "directory",
    "hotels",
    "jets",
    "yachts"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17"
  }
}
